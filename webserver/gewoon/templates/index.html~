<script type="text/javascript">
  
	//var myVar = setInterval(submit_form, 1000);

	$(function() {
	var submit_form = 
		function(e) 
		{
			$.getJSON($SCRIPT_ROOT + '/_showValues', 
			//{
			//a: $('input[name="a"]').val(),
			//b: $('input[name="b"]').val()
			//},
			function(data) {
				var splitted = data.result.split("!");
				ax=splitted[0];
				ay=splitted[1];
				az=splitted[2];
				gx=splitted[3];
				gy=splitted[4];
				gz=splitted[5];

				$('#ax').text("Acceleration x: "+ax.substring(0,8)+" g");
				$('#ay').text("Acceleration y: "+ay.substring(0,8)+" g");
				$('#az').text("Acceleration z: "+az.substring(0,8)+" g");

				$('#gx').text("Rotation x: "+gx.substring(0,8)+" deg/s");
				$('#gy').text("Rotation y: "+gy.substring(0,8)+" deg/s");
				$('#gz').text("Rotation z: "+gz.substring(0,8)+" deg/s");
				//$('input[name=a]').focus().select();
			});
			return false;
		};
	
	$('a#calculate').bind('click', submit_form);
	window.setInterval(submit_form,1000);
	
	$('input[type=text]').bind('keydown', function(e) {
		if (e.keyCode == 13) {
			submit_form(e);
		}
	});
	
	$('input[name=a]').focus();
});

$(function() {
var submit_form2 = 
	function(e) 
	{
		$.getJSON($SCRIPT_ROOT + '/_showFiles', 
		//{
		//a: $('input[name="a"]').val(),
		//b: $('input[name="b"]').val()
		//},
		function(allFiles) {
			var files = allFiles.result2;
			//var splittedFiles = data.result.split("?");
			//var splittedFiles2 = splittedFiles[1].split(",");
			//file1 = splittedFiles2[1];
			//file2 = splittedFiles2[2];
			//$('#d1').text(file1);
			//$('#d2').text(file2);

			//console.log(splittedFiles[1]);
			//alert(files);
			var splittedFiles = files.split(",");
			var numberOfFiles = splittedFiles.length-1;
			//var filesDir = "/home/debian/Desktop/bbbw/webserver/gewoon/datafiles/";
			//alert(numberOfFiles.toString());
			if(numberOfFiles==1)
			{
				$("#d1").visible();
				$("#d2").invisible();
				$("#d3").invisible();
				$("#d4").invisible();
				$("#d5").invisible();
			}
			else if(numberOfFiles==2)
			{
				$("#d1").visible();
				$("#d2").visible();
				$("#d3").invisible();
				$("#d4").invisible();
				$("#d5").invisible();
			}
			else if(numberOfFiles==3)
			{
				$("#d1").visible();
				$("#d1").text(splittedFiles[1]);
				//$("#ad1").attr("href", filesDir+splittedFiles[numberOfFiles]);
				$("#d2").visible();
				$("#d2").text(splittedFiles[2]);
				$("#d3").visible();
				$("#d3").text(splittedFiles[3]);
				$("#d4").invisible();
				$("#d5").invisible();
			}
			else if(numberOfFiles==4)
			{
				$("#d1").visible();
				$("#d2").visible();
				$("#d3").visible();
				$("#d4").visible();
				$("#d5").invisible();
			}
			else if(numberOfFiles==5)
			{
				$("#d1").visible();
				$("#d2").visible();
				$("#d3").visible();
				$("#d4").visible();
				$("#d5").visible();
			}
			else if(numberOfFiles>6)
			{
				$("#d1").visible();
				$("#d2").visible();
				$("#d3").visible();
				$("#d4").visible();
				$("#d5").visible();
			}
			else
			{
				$("#d1").invisible();
				$("#d2").invisible();
				$("#d3").invisible();
				$("#d4").invisible();
				$("#d5").invisible();
			}

		});
	//alert("test");
	};
	$('#h2').bind('click', submit_form2);
	$(document).ready(submit_form2);
});

(function($) {
$.fn.invisible = function() {
          return this.each(function() {
              $(this).css("visibility", "hidden");
	        });
        };
       $.fn.visible = function() {
        return this.each(function() {
          $(this).css("visibility", "visible");
	            });
    };
}(jQuery));


